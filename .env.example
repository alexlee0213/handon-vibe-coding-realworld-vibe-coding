# =============================================================================
# RealWorld Conduit - Environment Variables
# =============================================================================
# Copy this file to .env and fill in the values for your environment.
# DO NOT commit .env to version control.
# =============================================================================

# =============================================================================
# Database Configuration
# =============================================================================

# Development (SQLite) - Default
# Note: Use sqlite3:// for golang-migrate (installed with sqlite3 tag)
DATABASE_URL=sqlite3://./data/conduit.db

# Production (PostgreSQL) - Uncomment and configure for production
# DATABASE_URL=postgres://user:password@localhost:5432/conduit?sslmode=disable

# PostgreSQL Settings (for docker-compose)
POSTGRES_USER=conduit
POSTGRES_PASSWORD=conduit
POSTGRES_DB=conduit
POSTGRES_PORT=5432

# =============================================================================
# JWT Authentication
# =============================================================================

# Secret key for JWT signing - CHANGE THIS IN PRODUCTION!
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# JWT token expiration time
JWT_EXPIRY=72h

# =============================================================================
# Server Configuration
# =============================================================================

# Backend server port
SERVER_PORT=8080

# Environment: development, staging, production
SERVER_ENV=development

# =============================================================================
# CORS Configuration
# =============================================================================

# Allowed origins for CORS (comma-separated)
# Leave empty for development to allow all origins (*)
# For production, specify your frontend domain(s)
# Example: https://example.com,https://www.example.com
CORS_ALLOWED_ORIGINS=

# =============================================================================
# Frontend Configuration
# =============================================================================

# API base URL for frontend
VITE_API_URL=http://localhost:8080/api

# Frontend port (for Docker)
FRONTEND_PORT=3000

# =============================================================================
# AWS Configuration (for deployment)
# =============================================================================

# AWS region for CDK deployment
AWS_REGION=ap-northeast-2

# AWS account ID (optional, uses default if not set)
# AWS_ACCOUNT_ID=123456789012

# CDK default settings
CDK_DEFAULT_ACCOUNT=
CDK_DEFAULT_REGION=ap-northeast-2
